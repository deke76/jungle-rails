<section class='orders_show'>

  <header class='page-header text-center'>
    <h1>About Us</h1>
    <h4>We're go getters, our goals are to bring the world of e-commerce to your door.  Restless, relentless &  ruthless we help you sell your brand and your products at all costs!</h4> 
  </header>

  <div class="order-summary">
    <div class="d-flex text-center">
      <h2>Our People</h2>
    </div>
    <div class="d-flex text-center">
      <table class="table page-header">
        <tr class="row">
          <% @employees.each do |employee| %>
            <div class="col-md-3 text-center ">
              <div class="product">
                <%= image_tag employee.image, class: "img-rounded" %>
                <div class="caption">
                  <h3><%= employee.name %></h3>
                  <h4><%= employee.position %></h4>
                  <p><%= employee.job_description %></p>
                  <p><%= mail_to employee.email %></p>
                </div>
              </div>
            </div>
          <% end %>     
        </tr>
      </table>
    </div>
  </div>
</section>
