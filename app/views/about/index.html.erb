<section class='orders_show'>

  <header class='page-header'>
    <h1>About Us</h1>
  </header>

  <%= @employees.inspect %>
    <div class="order-summary">
    <div class="d-flex text-center">
      <h2>Our People</h2>
    </div>
    <div class="d-flex text-center">
      <table class="table page-header">
        <tr class="row">
          <% @employees.each do |employee| %>
            <div class="col-md-3 text-center ">
              <div class="product">
                <%= image_tag employee.image, class: "img-rounded" %>
                <div class="caption">
                  <h3><%= employee.name %></h3>
                </div>
              </div>
            </div>
          <% end %>     
        </tr>
      </table>
    </div>
  </div>
</section>
