<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2" class='text-center'><h3>Category</h3></th>
          <th class='text-center'><h3>Items</h3></th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan='2' class='text-right'><h4>Total Items</h4></th>
          <th class='text-center'><h4><%= @categories.count %></h4></th>
          </tr>
      </tfoot>

    </table>

  </div>

</section>
