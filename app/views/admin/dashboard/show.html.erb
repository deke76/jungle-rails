<section class='orders_show'>

  <header class='page-header'>
    <h1>Admin Dashboard</h1>
  </header>

  <div class="order-summary">
    <div class="d-flex text-center">
      <h2>Database Categories</h2>
    </div>
    <div class="d-flex text-center">
      <table class="table page-header">
        <tr class="row">
          <% @categories.each do |category| %>
            <div class="col-md-4 text-center ">
              <a href="categories/<%= category.id %>">
                <div class="product">
                  <%= image_tag category.image, class: "img-rounded" %>
                    <div class="caption">
                      <h3><%= category.name %></h3>
                      <h4><%= @products.where(category_id: category.id).count%> items in <%= category.name %></h4>
                  </div>
                </div>
              </a>
            </div>
          <% end %>      
        </tr>
      </table>
      <table class="table">
        <tr class="row">
          <h2>Total Products</h2>
          <h4><a href="/"><%= @products.count %> products across <%= @categories.count %> categories</a><h4>
        </tr>
      </table>
    </div>
  </div>
</section>